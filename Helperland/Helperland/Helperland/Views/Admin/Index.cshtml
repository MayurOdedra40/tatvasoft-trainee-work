        function checkFeedbackValidity() {
            debugger;
            var feedback = document.getElementById("RedundComment").value;
            $("#feedbackerror").html("");
            if (feedback == "") {
                $("#refundd").addClass("disabled");
                $("#feedbackerror").html("Comment is Required");
            }
            else if (!/^[0-9a-zA-Z_,' "]+$/.test(feedback)) {
                $("#feedbackerror").html("Invalid Feedback, Only 0-9,a-z,_,' ");
                $("#refundd").addClass("disabled");
            }
            else {
                var amt = $("#AmountToRefund").val();
                if (amt == "") {
                    $("#refundd").addClass("disabled");
                }
                else {
                    $("#refundd").removeClass("disabled");
                }
            }
        }

       
