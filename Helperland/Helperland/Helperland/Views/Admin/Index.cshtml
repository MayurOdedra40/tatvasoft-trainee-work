                        $("#oldRefund").val($("#RefundAmount").val());
                    }
                }
            });
        }

        function getAdminCity(data) {
            debugger;
            var postalcode = data.value;
            $("#AdminZipcodeError").html("");
            $("#AdminCity").html("");
            $("#AdminCityError").html("");

            if (/^[1-9][0-9]{5}$/.test(postalcode)) {
                if (postalcode.length == 6) {
                    $.ajax({
                        type: "GET",
                        url: "/Customer/GetCity?postalCode=" + postalcode,
                        success: function (response) {

                            if (response == "empty") {
                                $("#AdminZipcodeError").html("No City with this Postal Code")
                                $("#AdminCity").html("");
                                $("#AdminUpdate").addClass("disabled");
                            }
                            else {
                                $("#AdminCity").html('<option value="' + response + '" selected>' + response + '</option>');
                                $("#AdminUpdate").removeClass("disabled");
                            }
                        }
                    });
                }
                else {
                    document.getElementById("AdminZipcodeError").innerHTML = "Must be 6 Character Old";
                    $("#AdminUpdate").addClass("disabled");
                    return false;
                }
            }
            else {
                document.getElementById("AdminZipcodeError").innerHTML = "Invalid PostalCode";
                $("#AdminUpdate").addClass("disabled");
                return false;
            }
        }


        function AdminEdit() {

            debugger;

            var selectedTime = document.getElementById("AdminStartTime").value;
            var selectedDate = document.getElementById("AdminStartDate").value;
            var totalHour = parseFloat(document.getElementById("ForTotalhour").value);
            var selecteddate = new Date(selectedDate + "T" + selectedTime);

            if (!isValidDate(selecteddate)) {
                selecteddate = new Date();
                selecteddate.setDate(selecteddate.getDate() + 1);
                var tt = selectedTime.split(":");
                selecteddate.setHours(tt[0]);
                selecteddate.setMinutes(tt[1]);
                selecteddate.setSeconds(00);

            }


            var selecteddate2 = new Date(selecteddate);
            var currentdate = new Date();
            /*  if (selecteddate.getDate() < currentdate.getDate())*/
            if (selecteddate - currentdate <= 0) {
                document.getElementById("forstartdate").innerHTML = "Select future date";
                return false;
            }
            if (selecteddate.getDate() == currentdate.getDate()) {
                document.getElementById("forstartdate").innerHTML = "Cannot Book Service on Same day";
                return false;
            }

            selecteddate2.setHours(selecteddate2.getHours() + totalHour);
            if (selecteddate.getDate() == selecteddate2.getDate()) {
                var hrs = selecteddate2.getHours();
                if (hrs > 21) {
                    document.getElementById("forstarttime").innerHTML = "Service booking request is must be completed within 21:00 time";
                    return false;
                }
                else {
                    var add1 = document.getElementById("AdminAddress1").value;
                    var add2 = document.getElementById("AdminAddress2").value;

                    if (add1 == "") {
                        document.getElementById("AdminAddress1Error").innerHTML = "Enter Street Name";
                        return false;
                    }
                    else if (add1.length > 70) {
                        document.getElementById("AdminAddress1Error").innerHTML = "Cannot be More than 70 Character";
                        return false;
                    }
                    else if (add2 == "") {
                        document.getElementById("AdminAddress2Error").innerHTML = "Enter House Number";
                        return false;
                    }
                    else if (!/^[0-9]+$/.test(add2)) {
                        document.getElementById("AdminAddress2Error").innerHTML = "Only Number";
                        return false;
                    }
                    else if (add2.length > 70) {
                        document.getElementById("AdminAddress2Error").innerHTML = "Cannot be More than 70 Character";
                        return false;
                    }
                    else {
                        var postalcode = document.getElementById("AdminZipcode").value;
                        if (postalcode == "") {
                            document.getElementById("AdminZipcodeError").innerHTML = "Enter Postal Code";
                            return false;

                        }
                        else {
                            var feedback = document.getElementById("Feedback").value;
                            if (feedback == "") {
                                document.getElementById("FeedbackError").innerHTML = "Enter Reason for Cancel";
                                return false;
                            }
                            else if (!/^[0-9a-zA-Z _]+$/.test(feedback)) {
                                document.getElementById("FeedbackError").innerHTML = "Only Character";
                                return false;
                            }
                            else if (feedback.length > 500) {
                                document.getElementById("FeedbackError").innerHTML = "Only 500 Character";
                                return false;
                            }
                            else {

                                return true;
                            }
                        }
                    }
                }

            }
            else {
                document.getElementById("forstarttime").innerHTML = "Service booking request is must be completed within 21:00 time";
                return false;
            }
        }

