        function calculateRefund() {
            debugger;
            
            $("#RefundAmount").val(0);
            var totalCost = $("#totalCostRefund").val();
            var typeCal = $("#typeOfCalculation").val();
            var data = $("#AmountToRefund").val();
            var feedback = $("#RedundComment").val();
            var alreadyRefund = $("#oldRefund").val();
            if (alreadyRefund == "") {
                $("#oldRefund").val("0");
                alreadyRefund = "0";
            }
            if (data == "") {
                $("#RefundAmount").val("0");
                $("#refundd").addClass("disabled");
            }
            else if (typeCal == 1) {
                if (!/^[0-9]+$/.test(data)) {
                    $("#amountError").html("Invalid Percnetage. Only 0-9 characteers");

                }
                else if (parseFloat(data) > 100) {
                    $("#amountError").html("Cannot be Greater than 100");
                }
                else {
                     
                    var per = parseFloat(data) / 100;
                    var refundAmt = per * parseFloat(totalCost);

                    if (refundAmt + parseFloat(alreadyRefund) > totalCost) {
                        $("#amountError").html("Total Refund cannot be Greater than TotalCost");
                        $("#refundd").addClass("disabled");
                    }
                    else {

                        $("#RefundAmount").val(refundAmt);

                        if (feedback != "") {
                            $("#refundd").removeClass("disabled");
                        }
                        else {
                            $("#refundd").addClass("disabled");
                        }
                    }
                    
                }
            }
            else {
                if (!/^[0-9]+$/.test(data)) {
                    $("#amountError").html("Invalid fixed. Only 0-9 characteers");

                }
                else if (parseFloat(data) > parseFloat(totalCost)) {
                    $("#amountError").html("Cannot be Greater than " + totalCost);
                }
                else {

                    if (parseFloat(data) + parseFloat(alreadyRefund) > totalCost) {
                        $("#amountError").html("Total Refund cannot be Greater than TotalCost");
                        $("#refundd").addClass("disabled");
                    }
                    else {
                        $("#RefundAmount").val(data);


                        if (feedback != "") {
                            $("#refundd").removeClass("disabled");
                        }
                        else {
                            $("#refundd").addClass("disabled");
                        }
                    }
                   
                }

            }
        }

        function emptyerror() {
