@model User
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!-- contact us banner -->

<section class="container-fluid px-0" id="book-service-banner">
</section>

<!-- contact us banner -->

<section class="container-fluid px-0" id="book-service-section1">

    <div class="row mx-0 row1 text-center">
        <p class="title">Set up your cleaning service</p>
    </div>

    <div class="row row2 justify-content-center mx-0">
        <div class="line"></div>
        <img class="px-0" id="seprator" src="~/Images/separator.png" alt="">
        <div class="line"></div>
    </div>

    <div class="container-fluid row3 px-0 pb-5">
        <div class="row justify-content-center mx-0">
            <div class="col-12 col-lg-9" id="book-tabs">
                <div class="container-fluid px-0 ">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs book-service-tabs row mx-0" id="myTab" role="tablist">
                        <li class="nav-item col px-0" role="presentation">
                            <button class="nav-link active activen text-center" id="setup-service-tab" data-bs-toggle="tab"
                                    data-bs-target="#setup-service" type="button" role="tab"
                                    aria-controls="setup-service" aria-selected="true" onclick="tabOneClick()">
                                <img class="regular" src="~/Images/setup-service.png" alt="" width="26" height="26">
                                <img class="white" src="~/Images/setup-service-white.png" alt="" width="26"
                                     height="26">
                                <p class="d-xl-inline mb-0">Setup Service</p>
                            </button>
                        </li>
                        <li class="nav-item col px-0" role="presentation">
                            <button class="nav-link text-center" id="schedule-service-tab" data-bs-toggle="tab"
                                    data-bs-target="#schedule-service" type="button" role="tab"
                                    aria-controls="schedule-service" aria-selected="false" disabled onclick="tabtwoClick()">
                                <img class="regular" src="~/Images/schedule.png" alt="" width="26" height="26">
                                <img class="white" src="~/Images/schedule-white.png" alt="" width="26" height="26">
                                <p class="d-xl-inline mb-0">Schedule & Plan</p>
                            </button>
                        </li>
                        <li class="nav-item col px-0" role="presentation">
                            <button class="nav-link text-center" id="service-detials-tab" data-bs-toggle="tab"
                                    data-bs-target="#service-detials" type="button" role="tab"
                                    aria-controls="service-detials" aria-selected="false" disabled onclick="tabthreeClick()">
                                <img class="regular" src="~/Images/details.png" alt="" width="26" height="26">
                                <img class="white" src="~/Images/details-white.png" alt="" width="26" height="26">
                                <p class="d-xl-inline mb-0">Your Details</p>
                            </button>
                        </li>
                        <li class="nav-item col px-0" role="presentation">
                            <button class="nav-link text-center" id="service-payment-tab" data-bs-toggle="tab"
                                    data-bs-target="#service-payment" type="button" role="tab"
                                    aria-controls="service-payment" aria-selected="false" disabled>
                                <img class="regular" src="~/Images/payment.png" alt="" width="32" height="28">
                                <img class="white" src="~/Images/payment-white.png" alt="" width="32" height="28">
                                <p class="d-xl-inline mb-0">Make Payment</p>
                            </button>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">

                        <div class="tab-pane active" id="setup-service" role="tabpanel"
                             aria-labelledby="setup-service-tab">
                            <form method="post" data-ajax="true" data-ajax-success="tabOneSuccess" data-ajax-failure="tabOnefaliure" data-ajax-update="#schedule-service" class="contianer px-0 w-100 " id="form-tab-1"
                                  asp-controller="BookService" asp-action="CheckZipcode"
                                  novalidate>

                                <div class="row mx-0 mb-2">
                                    <p class="mb-1 px-0 text-bold fs-16">Enter your Postal Code</p>
                                </div>

                                <div class="row mx-0">
                                    <div class="col-sm-7 col-md-5  ps-0 mb-3 mb-sm-0">
                                        <input asp-for="ZipCode" name="ZipCode" type="text" class="form-control fs-16" id="ZipCode" style="height: 48px;"
                                               placeholder="Postal Code" required />
                                    </div>

                                    <div class="col-sm-5">
                                        <input class="btn btn-rounded btns" id="bookService1" type="submit" value="Check Availability">
                                    </div>
                                </div>
                                <span asp-validation-for="ZipCode" id="zipecodeError" class="danger w-100">
                                </span>

                            </form>
                        </div>

                        <div class="tab-pane fade" id="schedule-service" role="tabpanel"
                             aria-labelledby="schedule-service-tab">
                        </div>

                        <div class="tab-pane fade" id="service-detials" role="tabpanel"
                             aria-labelledby="service-detials-tab">
                          
                        </div>

                        <div class="tab-pane fade" id="service-payment" role="tabpanel"
                             aria-labelledby="service-payment-tab">

                        </div>
                    </div>

                </div>
            </div>

            <div class="col-lg-3">

                <div class="container payment-card px-0">

                    <div class="row heading mx-0">
                        <p class="mb-0 px-0">Payment Summary</p>
                    </div>

                    <div class="row mx-0 row-2">
                        <p class="mb-0 px-0 text-regular fs-16">
                            @{
                                String date = DateTime.Now.AddDays(1).ToString("dd/MM/yyyy");
                                date = date.Replace('-', '/');
                            }
                            <span id="forStartDate">
                                @date
                            </span>
                            <span id="ForStartTime">
                                08:00
                            </span>
                        </p>
                        <p class="mb-2 px-0 text-bold fs-18">Duration</p>
                        <div class="row mx-0 px-0 justify-content-between">
                            <div class="col-auto px-0">
                                <p class="mb-2 px-0 text-regular fs-16">Basic </p>
                                <p id="Etc1" class="mb-2 px-0 text-regular fs-16 d-none">Inside cabinets</p>
                                <p id="Etc2" class="mb-2 px-0 text-regular fs-16 d-none">Inside fridge</p>
                                <p id="Etc3" class="mb-2 px-0 text-regular fs-16 d-none">Inside oven</p>
                                <p id="Etc4" class="mb-2 px-0 text-regular fs-16 d-none">Laundry wash & dry</p>
                                <p id="Etc5" class="mb-2 px-0 text-regular fs-16 d-none">Interior windows</p>
                                <p class="mb-0 px-0 text-bold fs-16">Total Service Time</p>

                            </div>
                            <div class="col-auto px-0 text-end">
                                <p class="mb-2 px-0 text-regular fs-16">
                                <span id="forHour">
                                    3
                                </span>
                                Hrs</p>
                                <p id="Etc-1" class="mb-2 px-0 text-regular fs-16 d-none">30 Mins</p>
                                <p id="Etc-2" class="mb-2 px-0 text-regular fs-16 d-none">30 Mins</p>
                                <p id="Etc-3" class="mb-2 px-0 text-regular fs-16 d-none">30 Mins</p>
                                <p id="Etc-4" class="mb-2 px-0 text-regular fs-16 d-none">30 Mins</p>
                                <p id="Etc-5" class="mb-2 px-0 text-regular fs-16 d-none">30 Mins</p>
                                <p id="totalTime" class="mb-0 px-0 text-bold fs-16">3.5 Hrs</p>

                            </div>
                        </div>
                    </div>

                    <div class="row mx-0 row-3">
                        <div class="row mx-0 px-0 justify-content-between">
                            <div class="col-auto px-0">
                                <p class="mb-2 px-0 text-regular fs-16">Per cleaning</p>
                            </div>

                            <div class="col-auto px-0 text-end">
                                <span id="forHourPayment" class="mb-2 px-0 text-bold fs-16">
                                    75
                                </span>
                                <span` class="mb-2 px-0 text-bold fs-16 "> €</span`>
                            </div>
                        </div>
                    </div>

                    <div class="row mx-0 row-4">
                        <div class="row mx-0 px-0 justify-content-between">
                            <div class="col-auto px-0">
                                <p class="mb-0 mt-3 px-0 payment fs-20">Total Payment</p>
                            </div>

                            <div class="col-auto px-0 text-end">
                                <span id="forTotalPayment" class="mb-0 px-0 payment-amount">75</span>
                                <span class="mb-0 px-0 payment-amount"> €</span>
                            </div>
                        </div>
                    </div>

                    <div class="row mx-0 row-5">
                        <a class="px-0" href="">
                            <p class="mb-0 px-0 fs-14">
                                <img class="me-2" src="~/Images/smiley.png" alt="" width="21"
                                     height="21"> See what is always included
                            </p>
                        </a>
                    </div>

                </div>

                <div class="container book-now-faq mt-4 px-0">

                    <div class="row mx-0 text-center">
                        <p class="text-regular fs-20">Questions?</p>
                    </div>

                    <div class="row mx-0 pay">

                        <div class="container-fluid px-0 text-left" id="accordion">

                            <div class="card px-0 my-0">
                                <div class="d-flex card-header mx-0 px-0 justify-content-start">
                                    <button type="submit" class=" btn question ques-arrow col-auto px-0"
                                            data-bs-toggle="collapse" href="#collapseOne" aria-expanded="false"
                                            aria-controls="collapseOne">

                                        <img class="right" src="~/Images/right-arrow-dark.png" alt="" width="12">
                                    </button>
                                    <div class="col px-0">
                                        <a class="question  ques" data-bs-toggle="collapse" href="#collapseOne"
                                           aria-expanded="false" aria-controls="collapseOne">
                                            <p class="mb-0 text-regular fs-14">
                                                What's included in a cleaning?
                                            </p>
                                        </a>
                                    </div>
                                </div>
                                <div id="collapseOne" class="collapse" data-bs-parent="#accordion">
                                    <div class="card-body answer fs-14">
                                        Bedroom, Living Room & Common Areas,Bathrooms,Kitchen,Extras
                                    </div>
                                </div>
                            </div>

                            <div class="card px-0 my-0">
                                <div class="collapsed d-flex card-header mx-0 px-0 justify-content-start">
                                    <button type="submit" class="btn question ques-arrow col-auto px-0"
                                            data-bs-toggle="collapse" href="#collapseTwo" aria-expanded="false"
                                            aria-controls="collapseFalse">

                                        <img class="right" src="~/Images/right-arrow-dark.png" alt="" width="12">
                                    </button>
                                    <div class="col px-0">
                                        <a class="question  ques" data-bs-toggle="collapse" href="#collapseTwo"
                                           aria-expanded="false" aria-controls="collapseFalse">
                                            <p class="mb-0 text-regular fs-14">
                                                Which Helperland professional will come to my place?
                                            </p>
                                        </a>
                                    </div>
                                </div>
                                <div id="collapseTwo" class="collapse" data-bs-parent="#accordion">
                                    <div class="card-body answer fs-14">
                                        Helperland has a vast network of experienced, top-rated cleaners. Based on the time
                                        and date of your request, we work to assign the best professional available. Like
                                        working with a specific pro? Add them to your Pro Team from the mobile app and
                                        they'll be requested first for all future bookings. You will receive an email with
                                        details about your professional prior to your appointment.
                                    </div>
                                </div>
                            </div>


                            <div class="card px-0 my-0">
                                <div class="d-flex card-header mx-0 px-0 justify-content-start collapsed">
                                    <button type="submit" class="btn question ques-arrow col-auto px-0"
                                            data-bs-toggle="collapse" href="#collapseThree" aria-expanded="false"
                                            aria-controls="collapseThree">
                                        <img class="" src="~/Images/right-arrow-dark.png" alt="" width="12">
                                    </button>
                                    <div class="col px-0">
                                        <a class="question  ques" data-bs-toggle="collapse" href="#collapseThree"
                                           aria-expanded="false" aria-controls="collapseThree">
                                            <p class="mb-0 text-regular fs-14">
                                                Can I skip or reschedule bookings?
                                            </p>
                                        </a>
                                    </div>
                                </div>
                                <div id="collapseThree" class="collapse" data-bs-parent="#accordion">
                                    <div class="card-body answer fs-14">
                                        You can reschedule any booking for free at least 24 hours in advance of the
                                        scheduled start time. If you need to skip a booking within the minimum commitment,
                                        we’ll credit the value of the booking to your account. You can use this credit on
                                        future cleanings and other Helperland services.
                                    </div>
                                </div>
                            </div>

                            <div class="card px-0 my-0">
                                <div class="d-flex card-header mx-0 px-0 justify-content-start">
                                    <button type="submit" class=" btn question ques-arrow col-auto px-0"
                                            data-bs-toggle="collapse" href="#collapseFour" aria-expanded="false"
                                            aria-controls="collapseFour">

                                        <img class="right" src="~/Images/right-arrow-dark.png" alt="" width="12">
                                    </button>
                                    <div class="col px-0">
                                        <a class="question  ques" data-bs-toggle="collapse" href="#collapseFour"
                                           aria-expanded="false" aria-controls="collapseOne">
                                            <p class="mb-0 text-regular fs-14">
                                                Do I need to be home for the booking?
                                            </p>
                                        </a>
                                    </div>
                                </div>
                                <div id="collapseFour" class="collapse" data-bs-parent="#accordion">
                                    <div class="card-body answer fs-14">
                                        We strongly recommend that you are home for the first clean of your booking to show
                                        your cleaner around. Some customers choose to give a spare key to their cleaner, but
                                        this decision is based on individual preferences.
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row row1 mx-0 mt-3">
                        <a asp-controller="Home" asp-action="Faq"><p id="faq-link" class="fs-16">For more help</p></a>
                    </div>
                </div>

            </div>
        </div>
    </div>

</section>


