@model User
@{
    ViewData["Title"] = "ConfirmPassword";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section class="container-fluid px-0 py-5">

    <div class="modal d-block " id="confirm-password-Modal" tabindex="-1" aria-labelledby="exampleModalLabel"
         aria-hidden="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body container">
                    <form class="row" method="post" asp-controller="Home" asp-action="ResetPassword">

                        <input asp-for="Email" class="form-control" type="hidden" placeholder="Password" value="@ViewBag.email">

                        <div class="form-group">
                            <label asp-for="Password" class="form-label mb-1" for="">New Password</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Password" required>
                            <span asp-validation-for="Password" class="danger">

                            </span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label mb-1" for="">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" required>
                            <span asp-validation-for="ConfirmPassword" class="danger">

                            </span>
                        </div>

                        <button class="btn" type="submit">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

