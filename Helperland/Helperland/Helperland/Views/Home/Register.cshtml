@model User
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section class="container-fluid px-0" id="create-account-section1">

    <div class="row text-center row1 mx-0">
        <p class="title m-0 p-0">Create an account</p>
    </div>

    <div class="row row2 justify-content-center mx-0">
        <div class="line"></div>
        <img class="px-0" id="seprator" src="~/Images/separator.png" alt="">
        <div class="line"></div>
    </div>

    <div class="container row3 px-0">

        <form class="row mx-auto" asp-controller="Home" asp-action="Register" novalidate method="post">

            <div class="col-md-6">
                <div class="form-group">
                    <input asp-for="FirstName" class="form-control" type="text" placeholder="First Name" required>
                    <span asp-validation-for="FirstName" class="danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <input asp-for="LastName" class="form-control" type="text" placeholder="Last Name" required>
                    <span asp-validation-for="LastName" class="danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <input asp-for="Email" class="form-control" type="email" placeholder="E-mail address" required>
                    <span asp-validation-for="Email" class="danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon">+49</span>
                        <input asp-for="Mobile" type="text" class="form-control" placeholder="Mobile Number" aria-describedby="basic-addon" required>
                    </div>
                       <span asp-validation-for="Mobile" class="danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <input asp-for="Password" class="form-control" type="password" placeholder="Password" required>
                    <span asp-validation-for="Password" class="danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" required>
                    <span asp-validation-for="ConfirmPassword" class="danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-check">
                    <input asp-for="Terms" type="checkbox" class="form-check-input" id="terms" required>
                    <label for="terms" class="form-check-label ms-2">
                        I agree with the
                        <a href=""> terms and conditions</a>
                        of Helperland GmbH.
                    </label>
                </div>
                    <span asp-validation-for="Terms" class="danger"></span>
            </div>

            <div class="col-md-12">
                <div class="form-check">
                    <input asp-for="Privacy" type="checkbox" class="form-check-input" id="terms" required>
                    <label for="terms" class="form-check-label ms-2">
                        I have read the
                        <a href=""> privacy policy.</a>
                    </label>
                </div>
                    <span asp-validation-for="Privacy" class="danger"></span>
            </div>


            <button class="btn btn-lg" type="submit">Register</button>

            <div class="text-center text mb-5">
                Already registered?

                <a  asp-controller="Home" asp-action="Index" data-bs-toggle="modal" data-bs-target="#loginModal">Login now</a>
            </div>

        </form>
    </div>


</section>

