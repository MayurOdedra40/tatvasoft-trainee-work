@model User
<form class="px-2" data-ajax-method="post" data-ajax="true" data-ajax-success="successUpdatePassword" data-ajax-failure="passwordFailure" asp-controller="ServiceProvider" asp-action="ChangePassword" novalidate>
    <div class="row">
        <div id="SuccessUpdatePassword" class="alert alert-success d-none" role="alert">
            A simple success alert—check it out!
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Password" class="control-label" for="">Old Password</label>
                <input asp-for="Password" type="password" class="form-control"
                       placeholder="Current Password">
                <span asp-validation-for="Password" class="danger"></span>
                <span id="#forPass" class="danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label" for="">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control"
                       placeholder="Password">
                <span asp-validation-for="NewPassword" class="danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class="control-label" for="">Confirm Password</label>
                <input asp-for="ConfirmNewPassword" type="password" placeholder="Confirm Password"
                       class="form-control">
                <span asp-validation-for="ConfirmNewPassword" class="danger"></span>
            </div>
        </div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </div>

</form>