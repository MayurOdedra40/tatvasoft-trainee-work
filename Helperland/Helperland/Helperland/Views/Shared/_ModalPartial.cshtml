@model User
@using Microsoft.AspNetCore.Http;


<!-- login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body container">
                <p class="modal-title">Login to your account</p>

                <a href="#" class="btn-close" data-bs-dismiss="modal"></a>
                @if (TempData.ContainsKey("Message"))
                {
                    @if (TempData["ModalName"].ToString() == "#loginModal")
                    {
                        <span class="danger d-block">
                            @TempData["Message"]
                        </span>
                    }

                }

                @if (TempData.ContainsKey("SuccessMessage"))
                {
                    @if (TempData["ModalName"].ToString() == "#loginModal")
                    {
                        <span class="success d-block">
                            @TempData["SuccessMessage"]
                        </span>
                    }

                }
                <form class="" method="post" asp-controller="Home" asp-action="Login">
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" type="email" placeholder="Email">
                        <img src="~/Images/login-user.png" width="20" height="21" alt="">
                        <span asp-validation-for="Email" class="danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password">
                        <img src="~/Images/login-lock.png" width="20" height="21" alt="">
                        <span asp-validation-for="Password" class="danger"></span>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input mt-0" id="terms">
                        <label for="terms" class="form-check-label ms-2">
                            Remember me
                        </label>
                    </div>



                    <button class="btn" type="submit">Login</button>

                    <div class="row text-center">
                        <a class="" asp-controller="Home" asp-action="Index" data-bs-toggle="modal" data-bs-target="#forgot-password-Modal">Forgot Password?</a>
                    </div>
                    <div class="row justify-content-center">
                        Don't have an account?
                        <a class="d-inline w-auto" asp-controller="Home" asp-action="Register"> Create an account</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- forgot Modal -->
<div class="modal fade" id="forgot-password-Modal" tabindex="-1" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body container">
                <p class="modal-title">Forgot password</p>

                <a href="#" class="btn-close" data-bs-dismiss="modal"></a>

                @if (TempData.ContainsKey("Message"))
                {
                    @if (TempData["ModalName"].ToString() == "#forgot-password-Modal")
                    {
                        <span class="danger d-block">
                            @TempData["Message"]
                        </span>
                    }

                }
                @if (TempData.ContainsKey("SuccessMessage"))
                {
                    @if (TempData["ModalName"].ToString() == "#forgot-password-Modal")
                    {
                        <span class="success d-block">
                            @TempData["SuccessMessage"]
                        </span>
                    }

                }

                <form class="" asp-controller="Home" asp-action="ForgotPassowrd" method="post">
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" type="Email" placeholder="Email">
                        <span asp-validation-for="Email" class="danger"></span>
                    </div>

                    <button class="btn" type="submit">Send</button>

                    <div class="row text-center">
                        <a class="" href="" data-bs-toggle="modal" data-bs-target="#loginModal">Login Now</a>
                    </div>
                </form>
                <div id="forgot-password-msg-success" class="danger"></div>
            </div>
        </div>
    </div>
</div>




<!--Logout Modal -->
<div class="modal fade" id="logout-Modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body container">
                <div class="row justify-content-center text-center">
                    <span>
                        <img src="~/Images/correct-white-medium.png" height="26" width="26" alt="">
                    </span>
                    @if (TempData.ContainsKey("Message"))
                    {
                        @if (TempData["ModalName"].ToString() == "#logout-Modal")
                        {
                            <p>
                                @TempData["Message"]
                            </p>
                        }

                    }
                    <p id="text-message">
                        @if (TempData.ContainsKey("Message2"))
                        {
                            @if (TempData["ModalName"].ToString() == "#logout-Modal")
                            {
                                @TempData["Message2"]
                            
                        }

                        }
                        </p>
                        <button class="btn" data-bs-dismiss="modal">Ok</button>
                    </div>
            </div>
        </div>
    </div>
</div>

